generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "multiSchema"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas   = ["public", "auth"]
}

enum ReactionType {
  LIKE
  DISLIKE
  PARTY
  CLAP
  HEART
  FIRE
  SAD

  @@schema("public")
}

enum Status {
  DRAFT
  PLANNED
  PUBLISHED
  HIDDEN

  @@schema("public")
}

model Project {
  id               String   @id @default(cuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  name             String
  link             String
  shortDescription String?

  @@schema("public")
}

model Post {
  id                   String    @id @default(cuid())
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  title                String
  slug                 String    @unique
  tags                 String[]
  shortDescription     String?
  repositoryLink       String?
  status               Status    @default(DRAFT)
  thumbnail            Boolean   @default(false)
  thumbnailDescription String?
  Comment              Comment[]

  @@schema("public")
}

model Comment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  body String

  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String

  Reactions Reaction[]
  User      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String?

  @@schema("public")
}

model Reaction {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type ReactionType

  Comment   Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  commentId String
  User      User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String?

  @@schema("public")
}

model User {
  id       String  @id @unique
  username String?
  email    String?
  image    String?

  comments  Comment[]
  reactions Reaction[]

  @@schema("auth") // or @@schema("public")
}
